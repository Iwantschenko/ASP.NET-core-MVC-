@model MySite.Models.Course

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}
@using (Html.BeginForm("ResultEdition", "CourseView", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    

    <div class="form-group">
        @Html.LabelFor(model => model.Course_ID)
        @Html.TextBoxFor(model => model.Course_ID, new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(model => model.Course_ID)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Course_Name)
        @Html.TextBoxFor(model => model.Course_Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Course_Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Course_Description)
        @Html.TextBoxFor(model => model.Course_Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Course_Description)
    </div>

    <input type="submit" class="btn btn-primary"/>
}
