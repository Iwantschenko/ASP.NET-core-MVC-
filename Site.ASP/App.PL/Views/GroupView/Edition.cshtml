@model             GroupViewModel
@{
    Group RETURNGROUP = new Group();
}

@using (Html.BeginForm("ResultEdition", "GroupView", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.group.Group_Id)
        @Html.TextBoxFor(model => model.group.Group_Id, new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(model => model.group.Group_Id, "", new { @class = "text-danger" })
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(model => model.group.Group_Name)
        @Html.TextBoxFor(model => model.group.Group_Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.group.Group_Name,"", new { @class = "text-danger" })
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(model => model.group.CourseId ,"Select Course")
        @Html.DropDownListFor(Model => Model.group.CourseId, Model.courseSelectList, "----- Select Course -----", new { @class = "form-control" })
        @Html.ValidationMessageFor(Model => Model.group.CourseId,"", new { @class = "text-danger" })
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(model => model.group.TeacherId, "Select Teacher ")
        @Html.DropDownListFor(Model => Model.group.TeacherId, Model.teacherSelectList, "----- Select Teacher -----", new { @class = "form-control" })
        @Html.ValidationMessageFor(Model => Model.group.TeacherId, "", new { @class = "text-danger" })
    </div>


    @Html.HiddenFor(model => model.courseSelectList)
    @Html.HiddenFor(model => model.teacherSelectList)
    <input type="submit"  class="btn btn-primary" />
}
