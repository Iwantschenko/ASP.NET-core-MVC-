@model StudentListViewModel;
@{
    ViewBag.Title = "Students List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Students List </h1>
<button class="btn btn-primary" style="margin-left:80%" onclick="window.location.href= '@Url.Action("Edit","StudentsView", new {id = Guid.NewGuid()})'"> Create new </button>
<div>
    <table class="table table-striped">
        <thead>
            <tr>

                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Group</th>
            </tr>
        </thead>
        <tbody>
            @{
                int iter = 1;
                foreach (var item in Model.Students)
                {
                    <tr>
                        <td>@iter</td>
                        <td>@item.First_Name</td>
                        <td>@item.Last_Name</td>
                        <td>@Model.Groups.FirstOrDefault(x => x.Group_Id == item.GroupId).Group_Name</td>
                        <td style="text-align: right; padding-right: 10%;">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Student_Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Student_Id }, new { onclick = "return confirm('Are you sure?');" })

                        </td>
                    </tr>
                    iter++;
                }
            }
        </tbody>

    </table>
</div>
